.sideBar
  .sideHeader
    .sideHeader__box
      .sideHeader__box__name
        = current_user.name
      %ul.sideHeader__box__menu
        %li.list
          =link_to new_group_path do
            = icon('fa', 'edit',  class: "sideHeader__box__menu__new")
        %li.list
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: "sideHeader__box__menu__edit")
  .sideBody
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
            こんにちは
