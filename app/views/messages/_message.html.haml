.mainBox
  .mainBox__user
    .mainBox__user__name
      = message.user.name
    .mainBox__user__date
      = message.created_at.to_s
  .mainBox__message
    - if message.body.present?
      .mainBox__message__body
        = message.body
  = image_tag message.image.url, class: 'mainBox__image' if message.image.present?
