.mainBox{data:{message:{id:message.id}}}
  .mainBox__user
    .mainBox__user__name
      = message.user.name
    .mainBox__user__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .mainBox__message
    - if message.body.present?
      .mainBox__message__body
        = message.body
  = image_tag message.image.url, class: 'mainBox__image' if message.image.present?
